# identify keys with `xev -event keyboard`

bindsym XF86AudioMute exec pactl set-sink-mute `pactl list sinks short | grep RUNNING | awk '{print $1}'` toggle
bindsym XF86AudioLowerVolume exec pactl set-sink-volume `pactl list sinks short | grep RUNNING | awk '{print $1}'` -2%
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume `pactl list sinks short | grep RUNNING | awk '{print $1}'` +2%

bindsym XF86MonBrightnessDown exec light -U 5
bindsym XF86MonBrightnessUp exec light -A 5

bindsym Print exec ~/.config/sway/scripts/screenshot.sh

# cmus
bindsym $mod+XF86AudioMute exec echo player-pause | cmus-remote
bindsym $mod+XF86AudioLowerVolume exec echo player-prev | cmus-remote
bindsym $mod+XF86AudioRaiseVolume exec echo player-next | cmus-remote
bindsym XF86AudioPlay exec echo player-play | cmus-remote
bindsym XF86AudioPause exec echo player-pause | cmus-remote
bindsym XF86AudioNext exec echo player-next | cmus-remote
bindsym XF86AudioPrev exec echo player-prev | cmus-remote
